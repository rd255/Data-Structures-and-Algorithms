class Solution {
    public int findPeakElement(int[] nums) {
        return (nums.length==1) ? 0 : findPeakElement(nums,0,nums.length-1);
    }
    int findPeakElement(int[] nums, int left, int right) {
        if(left>right)
            return -1;
        else if(left==right) {
            if(left==0)
                if(nums[left]>nums[left+1]) 
                    return left;
                else 
                    return -1;
            else if (left == nums.length-1)
                if(nums[left]>nums[left-1]) 
                    return left;
                else 
                    return -1;
            else if(nums[left-1]<nums[left]) 
                if(nums[left]>nums[left+1]) 
                    return left;
                else 
                    return -1;
            else 
                return -1;
        }
        int mid = (left+right-1)/2;
        int a = findPeakElement(nums,left,mid);
        if(a > -1) 
            return a;
        a = findPeakElement(nums,mid+1,right);
        if(a > -1) 
            return a;
        return -1;
    }
}

/* 
Medium

914

1415

Favorite

